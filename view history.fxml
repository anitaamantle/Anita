<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:controller="com.aatbanks.app.viewhistorycontroller" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #1a2333;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
<center>
<VBox alignment="TOP_CENTER" spacing="20.0">
<VBox.margin><Insets top="40.0" left="20.0" right="20.0"/></VBox.margin>
<Label text="Transaction History" textFill="#f0f3f4">
<font><Font name="Segoe UI Bold" size="36.0"/></font>
</Label>
<Label text="All transactions for your accounts." textFill="#bdc3c7">
<font><Font name="Segoe UI Regular" size="16.0"/></font>
</Label>

<TableView fx:id="transactionTable" prefHeight="400.0" prefWidth="750.0" style="-fx-background-color: #2c3e50; -fx-base: #34495e; -fx-control-inner-background: #2c3e50; -fx-table-cell-border-color: #1a2333; -fx-table-header-border-color: #1a2333;">
<columns>
<TableColumn fx:id="dateColumn" prefWidth="150.0" text="Date"/>
<TableColumn fx:id="typeColumn" prefWidth="100.0" text="Type"/>
<TableColumn fx:id="accountColumn" prefWidth="200.0" text="Account"/>
<TableColumn fx:id="amountColumn" prefWidth="100.0" text="Amount"/>
</columns>
</TableView>

</VBox>
</center>
<bottom>
<Label fx:id="backLink" text="Back to Main Menu" textFill="#7f8c8d" BorderPane.alignment="CENTER" style="-fx-cursor: hand;" onMouseEntered="((Label)event.source).setStyle('-fx-underline: true; -fx-text-fill: #bdc3c7; -fx-cursor: hand;')" onMouseExited="((Label)event.source).setStyle('-fx-underline: false; -fx-text-fill: #7f8c8d; -fx-cursor: hand;')">
<padding><Insets bottom="20.0"/></padding>
<font><Font size="12.0"/></font>
</Label>
</bottom>
</BorderPane>