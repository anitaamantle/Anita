<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:controller="com.aatbanks.app.viewbalancecontroller" prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #1a2333;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
<center>
<VBox alignment="TOP_CENTER" spacing="30.0">
<VBox.margin><Insets top="40.0"/></VBox.margin>
<Label text="Account Overview" textFill="#f0f3f4">
<font><Font name="Segoe UI Bold" size="36.0"/></font>
</Label>
<Label text="Current Balances" textFill="#bdc3c7">
<font><Font name="Segoe UI Regular" size="18.0"/></font>
</Label>

<!-- Removed invisible characters that caused the LoadException on line 20 -->
<VBox fx:id="accountListVBox" alignment="CENTER" spacing="15.0" maxWidth="400.0" minHeight="200.0" style="-fx-background-color: #2c3e50; -fx-padding: 20; -fx-background-radius: 5;">
    <HBox alignment="CENTER" spacing="50.0">
        <Label text="Savings Account:" textFill="#f0ff00">
            <font><Font name="Segoe UI Bold" size="16.0"/></font>
        </Label>
        <Label text="0.00" fx:id="savingsBalanceLabel" textFill="#f0f3f4">
            <font><Font name="Segoe UI Regular" size="16.0"/></font>
        </Label>
    </HBox>
    <HBox alignment="CENTER" spacing="30.0">
        <Label text="Investment Account:" textFill="#f0f3f4">
            <font><Font name="Segoe UI Bold" size="16.0"/></font>
        </Label>
        <Label text="0.00" fx:id="investmentBalanceLabel" textFill="#f0f3f4">
            <font><Font name="Segoe UI Regular" size="16.0"/></font>
        </Label>
    </HBox>
</VBox>

<VBox alignment="CENTER" spacing="10.0">
<Label text="Quick Actions" textFill="#bdc3c7">
<font><Font name="Segoe UI Regular" size="16.0"/></font>
<VBox.margin><Insets bottom="5.0" top="10.0"/></VBox.margin>
</Label>
<HBox alignment="CENTER" spacing="30.0">
<!-- Added onMouseClicked handlers for controller functionality -->
<Label fx:id="depositLink" text="Deposit" textFill="#7f8c8d" style="-fx-cursor: hand;" onMouseClicked="#handleDepositLink" onMouseEntered="((Label)event.source).setStyle('-fx-underline: true; -fx-text-fill: #bdc3c7; -fx-cursor: hand;')" onMouseExited="((Label)event.source).setStyle('-fx-underline: false; -fx-text-fill: #7f8c8d; -fx-cursor: hand;')">
<font><Font size="14.0"/></font>
</Label>
<Label fx:id="withdrawLink" text="Withdraw" textFill="#7f8c8d" style="-fx-cursor: hand;" onMouseClicked="#handleWithdrawLink" onMouseEntered="((Label)event.source).setStyle('-fx-underline: true; -fx-text-fill: #bdc3c7; -fx-cursor: hand;')" onMouseExited="((Label)event.source).setStyle('-fx-underline: false; -fx-text-fill: #7f8c8d; -fx-cursor: hand;')">
<font><Font size="14.0"/></font>
</Label>
<Label fx:id="historyLink" text="View History" textFill="#7f8c8d" style="-fx-cursor: hand;" onMouseClicked="#handleHistoryLink" onMouseEntered="((Label)event.source).setStyle('-fx-underline: true; -fx-text-fill: #bdc3c7; -fx-cursor: hand;')" onMouseExited="((Label)event.source).setStyle('-fx-underline: false; -fx-text-fill: #7f8c8d; -fx-cursor: hand;')">
<font><Font size="14.0"/></font>
</Label>
</HBox>
</VBox>
</VBox>
</center>
<bottom>
<Label fx:id="mainMenuLink" text="Back to Main Menu" textFill="#7f8c8d" BorderPane.alignment="CENTER" style="-fx-cursor: hand;" 
    onMouseClicked="#handleMainMenuLink"
    onMouseEntered="((Label)event.source).setStyle('-fx-underline: true; -fx-text-fill: #bdc3c7; -fx-cursor: hand;')" 
    onMouseExited="((Label)event.source).setStyle('-fx-underline: false; -fx-text-fill: #7f8c8d; -fx-cursor: hand;')">
<padding><Insets bottom="20.0"/></padding>
<font><Font size="12.0"/></font>
</Label>
</bottom>
</BorderPane>