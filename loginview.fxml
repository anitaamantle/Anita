<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:controller="com.aatbanks.app.logincontroller" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #1a2333;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <Label text="Secure Login" textFill="#f0f3f4">
                <font>
                    <Font name="Segoe UI Bold" size="36.0" />
                </font>
            </Label>
            <VBox alignment="CENTER_LEFT" spacing="10.0" maxWidth="300.0">
                <Label text="Username / Account ID" textFill="#bdc3c7">
                    <font>
                        <Font name="Segoe UI Regular" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="usernameField" promptText="Enter your username" prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #2c3e50; -fx-text-fill: #f0f3f4; -fx-border-color: #34495e; -fx-border-radius: 5; -fx-background-radius: 5; -fx-prompt-text-fill: #7f8c8d;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <Label text="Password" textFill="#bdc3c7">
                    <font>
                        <Font name="Segoe UI Regular" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <PasswordField fx:id="passwordField" promptText="Enter your password" prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #2c3e50; -fx-text-fill: #f0f3f4; -fx-border-color: #34495e; -fx-border-radius: 5; -fx-background-radius: 5; -fx-prompt-text-fill: #7f8c8d;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </PasswordField>
                <HBox alignment="CENTER_RIGHT" prefHeight="25.0" maxWidth="300.0">
                    <Label fx:id="forgotCredentialsLink" text="Forgot Username / Password" textFill="#bdc3c7" style="-fx-underline: false; -fx-cursor: hand;" 
                        onMouseEntered="((Label)event.source).setStyle('-fx-underline: true; -fx-text-fill: #f0f3f4; -fx-cursor: hand;')"
                        onMouseExited="((Label)event.source).setStyle('-fx-underline: false; -fx-text-fill: #bdc3c7; -fx-cursor: hand;')">
                        <font>
                            <Font name="Segoe UI Regular" size="12.0" />
                        </font>
                    </Label>
                </HBox>
                <Button fx:id="loginButton" mnemonicParsing="false" text="Login" prefWidth="300.0" prefHeight="45.0" 
                    style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 5; -fx-cursor: hand;" 
                    onMouseEntered="((Button)event.source).setStyle('-fx-background-color: #4a637d; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 5; -fx-cursor: hand;')"
                    onMouseExited="((Button)event.source).setStyle('-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 5; -fx-cursor: hand;')">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
            </VBox>
        </VBox>
    </center>
    <bottom>
        <Label fx:id="createAccountLink" text="New user? Create New Account" textFill="#7f8c8d" BorderPane.alignment="CENTER" onMouseClicked="#handleCreateAccountLink"
            style="-fx-underline: false; -fx-cursor: hand;"
            onMouseEntered="((Label)event.source).setStyle('-fx-underline: true; -fx-text-fill: #bdc3c7; -fx-cursor: hand;')"
            onMouseExited="((Label)event.source).setStyle('-fx-underline: false; -fx-text-fill: #7f8c8d; -fx-cursor: hand;')">
            <padding>
                <Insets bottom="20.0" />
            </padding>
            <font>
                <Font size="12.0" />
            </font>
        </Label>
    </bottom>
</BorderPane>
